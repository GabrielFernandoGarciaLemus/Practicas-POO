package battle.game;


public class Personaje {
    private String nombre;
    private int salud;
    private int ataque;
    private int defensa;
    private double ta;
 
    
    //Metodo Constructor
    
    public Personaje(){
        String nombre ="Caballero";
        int salud  = 150;
        int ataque = 30;
        int defensa = 20;
        double ta = 0.8;
        
    }
    
    //Metodo para modificar el Nombre
    public void setNombre(String _nombre) {
        this.nombre = _nombre;
    }
    
    public String getNombre() {
        return this.nombre;
    }
    
    //Metodo para modificar la Salud 
    
    public void setSalud(String _salud) {
        this.nombre = _salud;
    }
    
    public int getSalud() {
        return this.salud;
    }
   
    //Metodo para modificar el Ataque
    
    public void setAtaque(String _ataque) {
        this.nombre = _ataque;
    }
    
  
    public int getAtaque() {
        return this.ataque;
    }
    
     //Metodo para modificar la defensa 
    
    public void setDefensa(int _defensa){
        this.defensa = _defensa;
    }
    
    public int getDefensa(){
        return this.defensa;
    }
    
    //Metodo para modificar Tasa de Acierto 
    
    public void setTa(double _ta){
        this.ta = _ta;
    }
    
    public double getTa(){
        return this.ta;
    }
    
    //Metodo para conocer cual es el estado del Personaje
    public boolean Estado(){
        boolean vida = true;
        if(this.salud<=0) vida=false;
        return vida;
    }
    
    //Metodo para decir si el Personaje esquivo un ataque
    
    public void Esquivar(){
        System.out.println(this.nombre + " logro esquivar el ataque...Fallo!");
    }
    
    //Metodo para Atacar a otro Personaje daño
    public void Ataque(int _ataque){
        
        int daño = _ataque-this.defensa;
        int vidaRestante = this.salud;
        
        if(daño>0){
            vidaRestante -= daño;
            System.out.println(this.nombre + " ha recibido un golpe...Perdio" + daño +" puntos de vida");
        } else{
            System.out.println(this.nombre +" recibio un golpe pero fue debil...Aprovecha y acabalo");
        }
        this.salud = vidaRestante;
         System.out.println(this.nombre +" tiene " + this.salud + " puntos restantes de vida!");
    }


}
